{
  "name": "OData Tool",
  "description": "Tool for OData visualization and manipulation",
  "version": "0.60",
  "manifest_version": 2,
   "background": {
      "scripts": ["libs/jquery.min.js","background/event.js","libs/xml2json.min.js",
                  "popup/popup.js"],
      "persistent": false
  },
  "browser_action": {
    "default_icon": "res/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [ {
    "js": [ "libs/jquery.min.js", "libs/xml2json.min.js", "libs/json_parse.js", "libs/jquery.scrollTo.min.js",
    
            "scripts/metadataHandling.js", "scripts/util.js", "scripts/crud.js", 
            "scripts/main.js", "scripts/formatter.js",
            "scripts/fiori.js"], 
	"css": [ "res/style.css" ],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  
  "_app": {
    "background": {
      "scripts": ["start.js"]
    }
  },
  
  "permissions": [
    "contextMenus",
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs", 
    "http://*/*", 
    "https://*/*"
  ]
}